#!/bin/sh

# kadu-config
#
# Tool for retrieving the library/include paths Kadu was compiled with.
#
# Useful for folks compiling their own Kadu modules outside the main
# source tree.
#
# Based on xmms-config from the XMMS package.
#
# This work is released under the GNU GPL, version 2 or later.

prefix="@prefix@"
exec_prefix="@exec_prefix@"
exec_prefix_set=no
data_dir="@datadir@"

version="@VERSION@"
include_dir="@includedir@"
kadu_include_dir="@includedir@/kadu"
lib_dir="@libdir@"

modules_dir="@datadir@/kadu/modules"

cflags="@QT_INCLUDES@ -DQT_THREAD_SUPPORT -D_REENTRANT"

usage()
{
    cat <<EOF
Usage: kadu-config [OPTIONS]
Options:
    [--prefix[=DIR]]
    [--exec-prefix[=DIR]]
    [--version]
    [--libs]
    [--cflags]
    [--data-dir]
    [--modules-dir]

EOF
    exit $1
}

if test $# -eq 0; then
    usage 1 1>&2
fi


while test $# -gt 0; do
    case "$1" in
	-*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
	*) optarg= ;;
    esac

    case $1 in
	--prefix=*)
	    prefix=$optarg
	    if test $exec_prefix_set = no ; then
		exec_prefix=$optarg
	    fi
	    ;;

	--prefix)
	    echo_prefix=yes
	    ;;

	--exec-prefix=*)
	    exec_prefix=$optarg
	    exec_prefix_set=yes
	    ;;

	--exec-prefix)
	    echo_exec_prefix=yes
	    ;;

	--version)
	    echo $version
	    ;;

	--cflags)
	    echo_cflags=yes
	    ;;

	--libs)
	    echo_libs=yes
	    ;;

	--data-dir)
	    echo_data_dir=yes
	    ;;

	--modules-dir)
	    echo_modules_dir=yes
	    ;;

	*)
	    usage 1 1>&2
	    ;;
    esac
  shift
done

if test "$echo_prefix" = "yes"; then
    echo $prefix
fi

if test "$echo_exec_prefix" = "yes"; then
    echo $exec_prefix
fi

if test "$include_dir" != "/usr/include"; then
    cflags="-I$include_dir -I$kadu_include_dir $cflags"
else
    cflags="-I$kadu_include_dir $cflags"
fi

if test "$lib_dir" != "/usr/lib"; then
    libs="-L$lib_dir"
else
    libs=""
fi

if test "$echo_cflags" = "yes"; then
    echo $cflags
fi

if test "$echo_libs" = "yes"; then
    echo $libs
fi

if test "$echo_data_dir" = "yes"; then
    echo $data_dir
fi

if test "$echo_plugin_dir" = "yes"; then
    echo $modules_dir
fi
